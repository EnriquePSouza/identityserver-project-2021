<h1>Home Page</h1>

@* Simple access quick checks *@
@* Use quando quiser checkar uma claim ou coisas mais simples *@
@if (User.Identity.IsAuthenticated)
{
    <h1>User is authenticated</h1>
}else
{
    <h1>User is NOT authenticated</h1>
}

@* Reusable functions *@
@* Use quando quiser checkar mehodos ou coisas mais complexas *@
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService

@if((await authorizationService.AuthorizeAsync(User, "Claim.DoB")).Succeeded)
{
    <h1>User has DoB Claim</h1>
}